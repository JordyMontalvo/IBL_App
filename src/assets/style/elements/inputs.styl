.input-wrapper
  position relative
  width 100%
  max-width 600px

.input-wrapper-error
  position relative
  width 100%
  max-width 600px
  display flex
  align-items center
.input-celular
  flex 1
  min-width auto
  font-family: 'Open Sans', sans-serif;
  padding: 5px 12px;
  border-radius: 5px;
  border: solid 1px #008f39;
  width: 198px;
  margin: 6px 0;
  font-size: 13.3333px;
  display: inline-block;
  transition: all 0.3s ease;
  height: 40px;
  background: #fff;
  color: #333;
  
.input 
  min-width 100%
  width 100%
  padding 12px 40px 12px 16px
  border 1px solid rgba(255, 255, 255, 0.3)

  font-size 14px
  transition all 0.3s ease
  height 40px
  background white
  color #333

  &::placeholder
    color #666

  &:focus
    outline none
    border-color rgba(255, 255, 255, 0.5)

.icon
  position absolute
  right 12px
  top 50%
  transform translateY(-50%)
  color #FFA500
  font-size 16px

