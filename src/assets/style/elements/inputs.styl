.input-wrapper
  position relative
  width 100%
  max-width 600px

.input
  width 100%
  padding 12px 40px 12px 16px
  border 1px solid rgba(255, 255, 255, 0.3)

  font-size 14px
  transition all 0.3s ease
  min-width 350px
  height 40px
  background white
  color #333

  &::placeholder
    color #666

  &:focus
    outline none
    border-color rgba(255, 255, 255, 0.5)

.icon
  position absolute
  right 12px
  top 50%
  transform translateY(-50%)
  color #FFA500
  font-size 16px

label
  color white
  display block
  font-size 14px
  text-align left

.input
  font-family 'Open Sans', sans-serif
  padding 5px 12px
  border-radius 5px
  // border-radius 4px
  // border solid 1px c-main-blue
  // border solid 1px c-main-red
  // border solid 1px c-main-light-green
  // border solid 1px c-main-purple
  // border solid 1px c-main-turk
  border solid 1px c-main-light-green
  width 198px
  margin 6px 0
  font-size 13.3333px
  display inline-block
  

  &.error
    border solid 1px red
  &.pass
    padding-right 24px

.form-group
  margin-bottom 1.5rem
  width 100%
  
  p
    color white
    margin-bottom 8px
    font-size 14px
    text-align left
