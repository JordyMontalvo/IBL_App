.welcome-container
  background white
  border-radius 8px
  padding 2rem
  box-shadow 0 0 20px rgba(0, 0, 0, 0.1)
  width 90%
  max-width 400px
  text-align center

  .logo-container2
    margin-bottom 2rem
    
    img
      width 180px
      height auto

  .button
    background #1B6B24
    color white
    padding 12px 24px
    border-radius 25px
    text-decoration none
    text-align center
    font-weight 500
    display block
    margin 1rem 0
    border none
    width 100%
    
    &:hover
      background darken(#1B6B24, 10%)

  .whatsapp-link
    color #333
    text-decoration none
    font-size 14px
    display flex
    align-items center
    justify-content center
    gap 0.5rem
    margin-top 1rem
    
    i
      color #25D366
      font-size 18px
